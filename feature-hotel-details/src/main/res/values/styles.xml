<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bold_text_style" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfpro_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="secondary_text_style" parent="">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/sfpro_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="primary_text_style" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfpro_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="chip_custom" parent="">
        <item name="android:textSize">16sp</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="font">@font/sfpro_regular</item>
        <item name="android:clickable">false</item>
    </style>
