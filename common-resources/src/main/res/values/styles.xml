<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bold_text_style" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfpro_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="secondary_text_style" parent="">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/sfpro_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="primary_text_style" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfpro_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="chip_custom" parent="">
        <item name="chipCornerRadius">5dp</item>
        <item name="font">@font/sfpro_regular</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="textInputLayout_custom_theme" parent="">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="textInputLayout_custom_style" parent="">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

</resources>
